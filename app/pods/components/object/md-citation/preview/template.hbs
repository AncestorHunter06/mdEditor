{{#layout/md-card title=title collapsible=true collapsed=false
  profilePath=profilePath required=required muted=muted
  btnText="Edit" btnClass="success" btnAction=(route-action editCitation (dasherize title)) btnIcon="pencil"
}}

{{object/md-citation/preview/body citation=citation}}

{{yield}}
<div class="card-footer">
  <button type="button" name="button" class="btn btn-success pull-right"
    {{action (route-action editCitation (dasherize title))}}>
    {{fa-icon "pencil"}} Edit Citation
  </button>
</div>
{{/layout/md-card}}
