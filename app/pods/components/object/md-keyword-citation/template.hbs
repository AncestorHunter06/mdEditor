{{#with model.thesaurus as |thesaurus|}}
<form class="md-keyword-citation form-horizontal">
  <fieldset disabled={{disabled}}>
    <div class="form-group">
      <label class="col-sm-2 control-label required">Title</label>
      {{input/md-input
        class="col-sm-10"
        placeholder="Enter title"
        valuePath="title"
        model=this
        showValidations=true
        required=true
      }}
    </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Date</label>
        {{input/md-datetime date=date class="col-xxl-4 col-md-10 col-sm-4"}}
        <div class="form-group clearfix visible-md-block visible-lg-block"></div>
        <label class="col-sm-2 control-label">Date Type</label>
        {{input/md-codelist class="col-xxl-4 col-md-10 col-sm-4" create=false tooltip=true icon=false disabled=disabled allowClear=true mdCodeName="dateType" value=dateType placeholder="Choose date type" }}
      </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Type</label>
      {{input/md-codelist class="col-xxl-5 col-lg-7 col-sm-10" create=true tooltip=true icon=false disabled=disabled allowClear=true mdCodeName="keywordType" value=model.keywordType placeholder="Choose keyword type" }}
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Edition</label>
      {{input/md-input class="col-sm-10" placeholder="Enter edition or version" value=thesaurus.edition required=false}}
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">URL</label>
      {{input/md-input class="col-sm-10"
        type="url"
        valuePath="onlineResource"
        model=this
        showValidations=true
        placeholder="Enter online link"
      }}
    </div>
  </fieldset>
</form>
{{/with}}
{{yield}}
