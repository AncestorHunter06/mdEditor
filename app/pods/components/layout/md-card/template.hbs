{{#if title}}
  <div class="card-header text-info">
      <h4 class="card-title md-card-chevron">
        {{#if titleIcon}}
          {{fa-icon titleIcon}}
        {{/if}}
        {{#if isCollapsible}}
          <a role="button" data-toggle="collapse" href="#{{cardId}}" aria-expanded="{{if collapsed "false" "true"}}"
          class="{{if collapsed "collapsed"}}" aria-controls="{{panelId}}">
          <span class="fa"></span> {{title}}
          </a>
        {{else}}
          {{title}}
        {{/if}}
        {{#if maximizable}}
          <a role="button" class="pull-right md-card-maximize">
            {{fa-icon windowIcon size=1 click=(action "toggleFullScreen")}}
          </a>
        {{/if}}
        {{#if btnText}}
          <button type="button" name="button" class="btn btn-{{if btnClass btnClass "primary"}} btn-xs pull-right" {{action btnAction}}>
            {{fa-icon btnIcon}}
            {{btnText}}
          </button>
        {{/if}}
      </h4>
  </div>
{{/if}}
<div id="{{cardId}}" class="card-collapse {{if collapsed "collapse" "in"}} {{if bodyIsRow "row"}} {{if block "card-block"}}">
    {{yield}}
</div>
