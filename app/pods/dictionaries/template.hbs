<h3>Dictionary Dashboard</h3>
<hr>
<div class="container-fluid">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>#</th>
        <th>Dictionary Name</th>
        <th>Data Resource Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |item index|}}
        <tr>
          <td>{{input type="checkbox" name="isChecked"}}</td>
          <td>{{index}}</td>
          <td>{{item.json.dataDictionary.citation.title}}</td>
          <td>{{item.json.dataDictionary.resourceType}}</td>
          <td>
            <div class="pull-right">
              {{control/md-json-button class="btn-xs btn-primary" json=item.cleanJson}}
              <button class="btn btn-xs btn-success" {{action "editItem" item}}>
                {{fa-icon "pencil"}} Edit
              </button>
              <button class="btn btn-xs btn-danger" {{action "deleteItem" item}}>
                <span class="fa fa-times"></span> Delete
              </button>
            </div>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan=5>
            {{#link-to "dictionary.new" class="btn btn-primary btn-lg" }}
              {{fa-icon "plus"}} Create a Dictionary{{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{outlet}}
