<h3>Metadata Record Dashboard</h3>

<div class="container-fluid">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>#</th>
        <th>Record Name</th>
        <th>Resource Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |item index|}}
        <tr>
          <td>{{input type="checkbox" name="isChecked"}}</td>
          <td>{{index}}</td>
          <td>{{item.json.metadata.resourceInfo.citation.title}}</td>
          <td>{{item.json.metadata.resourceInfo.resourceType}}</td>
          <td>
            <div class="pull-right">
              {{control/md-json-button json=item.json}}
              <button class="btn btn-xs btn-success" {{action "editItem" item}}>
                {{fa-icon "pencil"}} Edit
              </button>
              <button class="btn btn-xs btn-danger" {{action "deleteItem" item}}>
                <span class="fa fa-times"></span> Delete
              </button>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{outlet}}
